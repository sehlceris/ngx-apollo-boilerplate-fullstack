{
  "name": "ng2-apollo-boilerplate-server",
  "version": "0.0.1",
  "description": "Nest MEAN Server",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc -p ./tsconfig.json",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "prettier": "prettier '{src,e2e}/**/*.{ts,json,md,scss}' --write",
    "postinstall": "tsc -p ./tsconfig.json",
    "mongodb": "cd dev-tools/mongodb-docker && docker-compose up"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "dependencies": {
    "@nestjs/common": "5.3.6",
    "@nestjs/core": "5.3.6",
    "@nestjs/graphql": "^5.2.2",
    "@nestjs/mongoose": "5.2.2",
    "@nestjs/passport": "5.0.2",
    "@nestjs/swagger": "2.5.1",
    "apollo-server-express": "^2.0.6",
    "automapper-ts": "1.9.0",
    "bcryptjs": "2.4.3",
    "config": "2.0.1",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.1.1",
    "graphql-type-json": "^0.2.1",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.10",
    "mongoose": "5.2.14",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.3.2",
    "subscriptions-transport-ws": "^0.9.14",
    "typegoose": "5.2.1",
    "typescript": "3.0.3",
    "ws": "^6.0.0"
  },
  "resolutions": {
    "@types/express": "4.16.0",
    "@types/passport": "0.4.6"
  },
  "devDependencies": {
    "@nestjs/testing": "5.3.1",
    "@types/bcryptjs": "2.4.1",
    "@types/config": "0.0.34",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.2",
    "@types/jsonwebtoken": "7.2.8",
    "@types/lodash": "4.14.116",
    "@types/mongoose": "5.2.11",
    "@types/node": "10.9.4",
    "@types/passport": "0.4.6",
    "@types/passport-jwt": "3.0.1",
    "@types/supertest": "2.0.6",
    "husky": "^0.14.3",
    "jest": "23.6.0",
    "nodemon": "1.18.4",
    "prettier": "1.14.2",
    "supertest": "3.3.0",
    "ts-jest": "23.1.4",
    "ts-loader": "5.1.0",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.6.0",
    "tslint": "5.11.0",
    "webpack": "4.18.0",
    "webpack-cli": "3.1.0",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
